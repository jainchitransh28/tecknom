<style>
    .faq_main_wrapper {
      padding: 6rem 5rem;
      max-width: 1800px;
      margin: auto;
      display: grid;
      grid-template-columns: 300px 1fr;
      align-items: flex-start;
  }

    @media screen and (max-width: 768px) {
      .faq_main_wrapper { padding: 6rem 3rem; grid-template-columns: 250px 1fr; }
    }

    @media screen and (max-width: 640px) {
      .faq_main_wrapper { grid-template-columns: 1fr; gap: 0;  padding: 3rem; }

      .faq_main_wrapper.gap { gap: 5rem; }
    }
</style>

