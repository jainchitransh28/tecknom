<style>
      div#shopify-section-alternate-contact-section {
        padding-left: 5rem;
        max-width: 100%;
        width: 80%;
      }

      div#shopify-section-alternate-contact-section .contact_heading h2 {
        font-size: 20px;
        letter-spacing: 0px;
        line-height: 34px;
  /*       color: #000; */
        color: #fff;
        font-weight: 300;
        font-family: "Futura BT";
        text-decoration: none;
        margin: 0;
        text-transform: uppercase;
        text-align: center;
        {% if section.settings.text != blank %}
        margin-bottom: 0;
        {% else %}
        margin-bottom: 2rem;
        {% endif %}
      }

      .contact_text p {
        font-size: 14px;
        letter-spacing: 0px;
        line-height: 24px;
    /*     color: #818d99; */
        color: #fff;
        font-weight: 300;
        font-family: "Futura BT";
        text-decoration: none;
        max-width: 43rem;
        margin: 0 auto 2rem;
        text-align: center;
      }

      form#ContactForm .field {
        margin-bottom: 2rem;
      }

      form#ContactForm .field:before, form#ContactForm .field:after {
        display: none;
      }

      form#ContactForm input, form#ContactForm label {
        font-family: 'Futura BT';
        font-size: 16px;
        color: #818d99;
      }

      form#ContactForm input, form#ContactForm textarea {
        border: 1px solid #818d99;
      }

      form#ContactForm input:focus, form#ContactForm textarea:focus {
        border: 1px solid #000;
        box-shadow: none !important;
      }

      form#ContactForm button {
        background: #818d99;
        border: none;
        font-size: 16px;
        font-family: 'Futura BT';
        text-transform: uppercase;
    }

      form#ContactForm button:before, form#ContactForm button:after {
        display: none;
    }

      form#ContactForm button:hover {
        transform: scale(1.01);
    }

      @media screen and (min-width: 1800px) {
        div#shopify-section-alternate-contact-section { width: 92.6rem; margin-left: 10rem; }
      }

      @media screen and (max-width: 1024px) {
        div#shopify-section-alternate-contact-section { width: 80%; padding-left: 0; }
      }

      @media screen and (max-width: 768px) {
        div#shopify-section-alternate-contact-section { width: 90%; margin-left: 0; }
      }

      @media screen and (max-width: 640px) {
        div#shopify-section-alternate-contact-section { width: 100%; }

        .form_generater_form_div { padding: 35px 0 !important; }
      }
</style>

{% if section.settings.head != blank %}
  <div class="contact_heading">
    <h2>{{ section.settings.head }}</h2>
  </div>
{% endif %}

{% if section.settings.text != blank %}
  <div class="contact_text">
    <p>{{ section.settings.text }}</p>
  </div>
{% endif %}

{% comment %}<div style="margin:0 auto;" class="pxFormGenerator" id="lcSw6T6UpvzjHtDPxPj9Qg"></div>{% endcomment %}
