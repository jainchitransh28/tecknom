<style>
  div#shopify-section-track-order-section {
    padding-left: 5rem;
    padding-top: 3rem;
    max-width: 100%;    
    width: 80%;
  }

  div#shopify-section-track-order-section > div {
    font-size: 16px;
    letter-spacing: 0px;
    line-height: 34px;
    color: #818d99;
    font-weight: 300;
    font-family: "Futura BT";
    text-decoration: none;
    margin: 0;
    text-transform: uppercase;
  }

  label#track_label, label#track_mail {
    display: inline-block;
    font-size: 13px;
    text-transform: capitalize;
    margin-bottom: 0;
    margin-top: 1rem;
    position: relative;
    left: -144px;
  }
  
  label#track_mail {
    left: -154px;
  }

  input#YQNum, input#track_email {
    max-width: 40rem;
    width: 100%;
    height: 45px;
    padding-left: 1rem;
    display: block;
    margin: 0 auto;
  }
  
  .btns_wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 3rem;
  }
  
  .btns_wrap a {
    display: inline-block;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  input[type="button"], .btns_wrap a {
    width: 19.5rem;
    height: 45px;
    background: #818d99;
    border: none;
    font-family: 'Futura BT';
    font-weight: 300;
    font-size: 16px;
    color: #fff;
    letter-spacing: 1px;
    border-radius: 2px;
    position: relative;
    top: 1px;
    cursor: pointer;
    margin-right: 1rem;
  }
  
  input[type="button"] {
    margin-right: 0; 
  }

  input#YQNum:focus-visible {
    border: 1px solid #000;
    box-shadow: none !important;
    outline: none !important;
    outline-offset: unset !important;
  }

  @media screen and (min-width: 1800px) {
    div#shopify-section-track-order-section { width: 92.6rem; margin-left: 10rem; }
    
    input#YQNum, input#track_email { max-width: 60rem; }
    
    input[type="button"], .btns_wrap a { width: 29.5rem; }
  }

  @media screen and (max-width: 1024px) {
    div#shopify-section-track-order-section { width: 80%; padding-left: 0; }
  }

  @media screen and (max-width: 920px) {
    input#YQNum { margin-bottom: 1rem; }

    input[type="button"], .btns_wrap a { width: 100%; }

    label#track_label, label#track_mail { left: 0; }
  }

  @media screen and (max-width: 768px) {
    div#shopify-section-track-order-section { width: 90%; margin-left: 0; }
    
    input#YQNum, input#track_email { max-width: 100%; }
  }

  @media screen and (max-width: 640px) {
    div#shopify-section-track-order-section { width: 100%; }     
  }

</style>

<div style="text-align: center;">Enter your tracking number here to see your order status.</div>
<div style="text-align: center;">
  <label for="YQNum" id="track_label">Enter the Order Id*: </label>
  <input type="text" id="YQNum" maxlength="50" required />
  <label for="track_email" id="track_mail">Email Address*: </label>
  <input type="email" id="track_email" maxlength="50" required />
  <div class="btns_wrap">
    {% if customer %}
    <a href="/account">My Account</a>  
    {% else %}
    <a href="/account/login">Log In</a>
    {% endif %}
  <input type="button" value="TRACK" onclick="doTrack()" /></div>
</div>
<div id="YQContainer"></div>
<!--Script code can be put in the bottom of the page, wait until the page is loaded then execute.-->
<script type="text/javascript" src="//www.17track.net/externalcall.js"></script>
<script type="text/javascript">// <![CDATA[
  function doTrack() {
    var num = document.getElementById("YQNum").value;
    var email = document.getElementById('track_email').value;
    if(num===""){
      alert("Enter your number."); 
      return;
    } else if(email==='') {
      alert('Enter your email');
      return;
    }
    YQV5.trackSingle({
      //Required, Specify the container ID of the carrier content.
      YQ_ContainerId:"YQContainer",
      //Optional, specify tracking result height, max height 800px, default is 560px.
      YQ_Height:560,
      //Optional, select carrier, default to auto identify.
      YQ_Fc:"0",
      //Optional, specify UI language, default language is automatically detected based on the browser settings.
      YQ_Lang:"en",
      //Required, specify the number needed to be tracked.
      YQ_Num:num
    });
  }
  // ]]></script>

