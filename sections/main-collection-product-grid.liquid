    background: #fff;
    opacity: 0;
    pointer-events: none;
    transition: all .3s;
    z-index: 2;
  }

  .card-wrapper:hover .card__information {
    opacity: 1;
    pointer-events: all;
  }

  .card-wrapper:hover .card__inner > .card__content {
    display: none;
  }

  .card-wrapper:hover .card, .card-wrapper:hover .card__content {
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }

  .card-wrapper:hover .card__content {
    box-shadow: 0 10px 10px rgba(0,0,0,0.1);
    z-index: 2;
  }

  #product-grid .card__badge.top {
    display: none;
  }

  .hovered_img {
    opacity: 0;
    pointer-events: none;
    transition: all .3s;
  }

  .card-wrapper:hover .hovered_img {
    opacity: 1;
    pointer-events: all;
  }

  #product-grid .slick-list, #product-grid .slick-track {
    height: 100%;
  }

  .slick-prev {
    left: 0;
    width: 3rem;
    height: 3rem;
    z-index: 2;
  }

  .slick-prev:before {
    content: "\f053";
    font-family: 'fontAwesome';
    color: #121111;
    font-size: 1.5rem;
  }

  .slick-next {
    right: 0;
    width: 3rem;
    height: 3rem;
    z-index: 2;
  }

  .slick-next:before {
    content: "\f054";
    font-family: 'fontAwesome';
    color: #121111;
    font-size: 1.5rem;
  }

  li.grid__item.advert {
    background: pink;
  }

  .card_wrapper1 {
    width: 100%;
    height: 100%;
    box-shadow: 0 0 10px rgb(0 0 0 / 10%);
  }
  .card_wrapper1 img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-wrapper:hover .card__heading > a {
    text-decoration: none !important;
  }

  .card-wrapper:hover .view_product {
    text-decoration: none;
  }

  .card__information {
    padding: 2.5rem 1.5rem !important;
  }

  .hovered_img ul.slick-dots {
    bottom: 3rem !important;
    z-index: 2;
  }

  ul#product-grid {
    display: grid;
    grid-template-columns: repeat(4,1fr);
    gap: 8px;
}

