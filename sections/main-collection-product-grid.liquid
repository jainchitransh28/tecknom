<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .product-count.light {
    display: none;
  }

  div#FacetsWrapperDesktop h2,
  div#FacetsWrapperDesktop details summary div span {
    font-size: 16px;
    letter-spacing: 2px;
    color: #000000;
    font-weight: 300;
    font-family: "Futura BT";
    text-align: center;
    text-transform: uppercase;
  }

  .card-wrapper {
    overflow: inherit;
  }

  .facets__header,
  ul.facets__list span {
    letter-spacing: 2px;
    color: #000000;
    font-weight: 300;
    font-family: "Futura BT";
    text-align: center;
    text-transform: uppercase;
  }

  .card__heading {
    font-size: 16px;
    letter-spacing: 1px;
    color: #000000;
    font-weight: 300;
    font-family: "Futura BT";
    text-align: center;
    line-height: 2.5rem;
  }

  .card-information {
    letter-spacing: 1px;
    color: #000000;
    font-family: "Futura LT";
    text-align: center;
    margin-top: 1.6rem;
  }

  .card-information .price {
    font-size: 16px;
  }

  .card-wrapper:hover {
    z-index: 3;
  }

  a.view_product {
    font-size: 12px;
    letter-spacing: 2px;
    color: #000000;
    font-family: "Futura LT";
    text-align: center;
    text-transform: uppercase;
    display: inline-block;
    margin-top: 1.6rem !important;
  }

  a.view_product span {
    font-size: 8px;
    position: relative;
    top: -1px;
  }

  .card__inner {
    background: transparent !important;
  }

  /*   .card__content {
  opacity: 0;
  position: absolute !important;
  bottom: -1rem;
  transform: translateY(100%);
  transition: all .3s;
  }

  .card-wrapper:hover .card__content {
  opacity: 1;
  transform: translateY(0);
  } */

  /*   .card__information {
  background: red;
  height: 0;
  overflow: hidden;
  display: none;
  } */

  .card__content {
    position: absolute;
    bottom: -12.5rem;
  }

  .card__information {
    background: #fff;
    opacity: 0;
    pointer-events: none;
    transition: all .3s;
    z-index: 2;
  }

  .card-wrapper:hover .card__information {
    opacity: 1;
    pointer-events: all;
  }

  .card-wrapper:hover .card__inner > .card__content {
    display: none;
  }

  .card-wrapper:hover .card, .card-wrapper:hover .card__content {
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
  }

  .card-wrapper:hover .card__content {
    box-shadow: 0 10px 10px rgba(0,0,0,0.1);
    z-index: 2;
  }

  #product-grid .card__badge.top {
    display: none;
  }

  .hovered_img {
    opacity: 0;
    pointer-events: none;
    transition: all .3s;
  }

  .card-wrapper:hover .hovered_img {
    opacity: 1;
    pointer-events: all;
  }

  #product-grid .slick-list, #product-grid .slick-track {
    height: 100%;
  }

  .slick-prev {
    left: 0;
    width: 3rem;
    height: 3rem;
    z-index: 2;
  }

  .slick-prev:before {
    content: "\f053";
    font-family: 'fontAwesome';
    color: #121111;
    font-size: 1.5rem;
  }

  .slick-next {
    right: 0;
    width: 3rem;
    height: 3rem;
    z-index: 2;
  }

  .slick-next:before {
    content: "\f054";
    font-family: 'fontAwesome';
    color: #121111;
    font-size: 1.5rem;
  }

  li.grid__item.advert {
    background: pink;
  }

  .card_wrapper1 {
    width: 100%;
    height: 100%;
    box-shadow: 0 0 10px rgb(0 0 0 / 10%);
  }
  .card_wrapper1 img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-wrapper:hover .card__heading > a {
    text-decoration: none !important;
  }

  .card-wrapper:hover .view_product {
    text-decoration: none;
  }

  .card__information {
    padding: 2.5rem 1.5rem !important;
  }

  .hovered_img ul.slick-dots {
    bottom: 3rem !important;
    z-index: 2;
  }

  ul#product-grid {
    display: grid;
    grid-template-columns: repeat(4,1fr);
    gap: 8px;
}

ul#product-grid li.grid__item {
    width: 100%;
    max-width: 100%;
}

ul#product-grid li.grid__item.advert {
    grid-column: span 2;
}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (min-width: 1800px) {
    .card__content { bottom: -12.5rem; }  
  }

  @media screen and (max-width: 768px) {
    /*     .card__media .media img { transition: all .3s; }

    .card-wrapper:hover .card__media .media img { transform: scale(0.7); top: -50px; } */

    ul#product-grid { grid-template-columns: repeat(2, 1fr); }
    .card__content { position: relative; bottom: initial; }
  }

  @media screen and (max-width: 640px) {
    .card__content { bottom: 0; }

    .card__information { opacity: 1; pointer-events: all; }

    .card-information .price { font-size: 14px; }
  }
</style>

<div class="section-{{ section.id }}-padding">
  {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
  {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
  <facet-filters-form class="facets facets-vertical-sort page-width small-hide no-js-hidden">
    <form class="facets-vertical-form" id="FacetSortForm">
      <div class="facet-filters sorting caption">
        <div class="facet-filters__field">
          <h2 class="facet-filters__label caption-large text-body">
            <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
          </h2>
          <div class="select">
            {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
            <select name="sort_by" class="facet-filters__sort select__select caption-large" id="SortBy" aria-describedby="a11y-refresh-page-message">
              {%- for option in collection.sort_options -%}
              <option value="{{ option.value | escape }}"{% if option.value == sort_by %} selected="selected"{% endif %}>{{ option.name | escape }}</option>
              {%- endfor -%}
            </select>
            {% render 'icon-caret' %}
          </div>
        </div>
        <noscript>
          <button type="submit" class="facets__button-no-js button button--secondary">{{ 'products.facets.sort_button' | t }}</button>
        </noscript>
      </div>

      <div class="product-count-vertical light" role="status">
        <h2 class="product-count__text text-body">
          <span id="ProductCountDesktop">
            {%- if collection.results_count -%}
            {{ 'templates.search.results_with_count' | t: terms: collection.terms, count: collection.results_count }}
            {%- elsif collection.products_count == collection.all_products_count -%}
            {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
            {%- else -%}
            {{ 'products.facets.product_count' | t: product_count: collection.products_count, count: collection.all_products_count }}
            {%- endif -%}
          </span>
        </h2>
        <div class="loading-overlay__spinner">
          <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
            <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
          </svg>
        </div>
      </div>  
    </form>
  </facet-filters-form>
  {%- endif -%}

  <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %}">
    {{ 'component-facets.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
    {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
    <aside aria-labelledby="verticalTitle" class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}" id="main-collection-filters" data-id="{{ section.id }}">
      {% render 'facets', results: collection, enable_filtering: section.settings.enable_filtering, enable_sorting: section.settings.enable_sorting, filter_type: section.settings.filter_type %}
    </aside>
    {%- endif -%}

    <div class="product-grid-container{% if section.settings.filter_type == 'vertical' and section.settings.collapse_on_larger_devices %} product-grid-container-vertical{% endif %}" id="ProductGridContainer">
      {%- paginate collection.products by section.settings.products_per_page -%}
      {%- if collection.products.size == 0 -%}
      <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
        <div class="loading-overlay gradient"></div>
        <div class="title-wrapper center">
          <h2 class="title title--primary">
            {{ 'sections.collection_template.empty' | t }}<br>
            {{ 'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: "underlined-link link" }}
          </h2>
        </div>
      </div>
      {%- else -%}
      <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}">
        <div class="loading-overlay gradient"></div>

        <ul id="product-grid" data-id="{{ section.id }}" class="
                                                                grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                                                                grid--{{ section.settings.columns_desktop }}-col-desktop">
          {%- for product in collection.products -%}
          {% assign lazy_load = false %}
          {%- if forloop.index > 2 -%}
          {%- assign lazy_load = true -%}
          {%- endif -%}
          {% if request.path contains '/collections/all' %}

          {% if forloop.index == 9 %}
          {% if section.settings.ad1 != blank %}
          <li class="grid__item advert">
            <div class="card_wrapper1">
              <img src="{{ section.settings.ad1 | img_url: '500x' }}"/>
            </div>
          </li>
          {% endif %}
          
          {% elsif forloop.index == 17 %}
          {% if section.settings.ad3 != blank %}
          <li class="grid__item advert">
            <div class="card_wrapper1">
              <img src="{{ section.settings.ad3 | img_url: '500x' }}"/>
            </div>            
          </li>
          {% endif %}            
          {% endif %}

          {% else %}
          {% if forloop.index == 9 %}
          {% if collection.metafields.custom.crossbody_bags_messenger_bags !=blank %}
          <li class="grid__item advert">
            <div class="card_wrapper1">
              <img src="{{ collection.metafields.custom.crossbody_bags_messenger_bags | img_url: '500x' }}"/>
            </div>
          </li>
          {% else %}
          <li class="grid__item advert">
            <div class="card_wrapper1">
              <img src="{{ section.settings.ad1 | img_url: '500x' }}"/>
            </div>
          </li>
          {% endif %}
          
          {% elsif forloop.index == 17 %}
          {% if collection.metafields.custom.travelbags != blank %}
          <li class="grid__item advert">
            <div class="card_wrapper1">
              <img src="{{ collection.metafields.custom.travelbags | img_url: '500x' }}"/>
            </div>            
          </li>
          {% else %}
          <li class="grid__item advert">
            <div class="card_wrapper1">
              <img src="{{ section.settings.ad3 | img_url: '500x' }}"/>
            </div>            
          </li>
          {% endif %}
         
          {% endif %}
          {% endif %}

          <li class="grid__item">
            {% render 'card-product',
                    card_product: product,
            media_aspect_ratio: section.settings.image_ratio,
            show_secondary_image: section.settings.show_secondary_image,
            show_vendor: section.settings.show_vendor,
            show_rating: section.settings.show_rating,
            lazy_load: lazy_load,
            show_quick_add: section.settings.enable_quick_add,
            section_id: section.id

            %}
          </li>
          {%- endfor -%}
        </ul>

        {%- if paginate.pages > 1 -%}
        {% render 'pagination', paginate: paginate, anchor: '' %}
        {%- endif -%}
      </div>
      {%- endif -%}
      {%- endpaginate -%}
    </div>
  </div>
</div>

<script>
  $('.hovered_img').slick({
    dots: true,
    infinite: false,
    speed: 500,
    slidesToShow: 1,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true,
          dots: false
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 2
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });
</script>

